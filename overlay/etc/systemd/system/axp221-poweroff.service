[Unit]
Description=AXP221 PMIC Power Off
Documentation=https://github.com/GeoDerp/uconsole-cm5-opensuse-microos
DefaultDependencies=no
Before=poweroff.target halt.target
After=umount.target systemd-remount-fs.service

[Service]
Type=oneshot
ExecStart=/usr/local/sbin/axp221-poweroff.sh
TimeoutStartSec=10

[Install]
WantedBy=poweroff.target halt.target
